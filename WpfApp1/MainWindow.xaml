<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
             Height="200" 
        Width="200"  
        Name="mywindow"
        Background="Transparent"  
        WindowStyle="None" 
        AllowsTransparency="True" 
        ShowInTaskbar="true" 
        Topmost="True" 
        ResizeMode="NoResize" >


   

        
    <Border x:Name="TYPE4" BorderBrush="#FF00CAFF" BorderThickness="1" CornerRadius="75" HorizontalAlignment="Center" VerticalAlignment="Center" Height="150" Width="150">
        <Image x:Name="RenderImage"  Width="150" Height="150" HorizontalAlignment="Center" VerticalAlignment="Center"  >
            <Image.Clip>
                <EllipseGeometry RadiusX="75" RadiusY="75" Center="75,75"/>
            </Image.Clip>
        </Image>
    </Border>
    
   



</Window>
